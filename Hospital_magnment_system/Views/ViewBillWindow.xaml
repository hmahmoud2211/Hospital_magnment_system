<Window x:Class="Hospital_magnment_system.Views.ViewBillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Bill" Height="700" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel>
            <TextBlock Text="INVOICE" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
            <TextBlock Text="Hospital Management System" 
                      FontSize="16" 
                      HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Bill Content -->
        <ScrollViewer Grid.Row="1" Margin="0,20">
            <StackPanel>
                <!-- Bill Info -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bill Number"/>
                        <TextBlock x:Name="txtBillNumber" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Bill Date"/>
                        <TextBlock x:Name="txtBillDate" 
                                 FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Status"/>
                        <TextBlock x:Name="txtStatus" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <!-- Patient Info -->
                <GroupBox Header="Patient Information" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Name"/>
                        <TextBlock x:Name="txtPatientName" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Contact"/>
                        <TextBlock x:Name="txtPatientContact" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Address"/>
                        <TextBlock x:Name="txtPatientAddress" 
                                 FontWeight="Bold" 
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- Doctor Info -->
                <GroupBox Header="Doctor Information" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Attending Doctor"/>
                        <TextBlock x:Name="txtDoctorName" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </GroupBox>

                <!-- Charges -->
                <GroupBox Header="Charges Breakdown" Margin="0,0,0,20">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Room Charges" Grid.Column="0"/>
                        <TextBlock x:Name="txtRoomCharges" 
                                 Grid.Column="1"/>

                        <TextBlock Text="Medicine Charges" 
                                 Grid.Row="1" Grid.Column="0"/>
                        <TextBlock x:Name="txtMedicineCharges" 
                                 Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="Doctor Fees" 
                                 Grid.Row="2" Grid.Column="0"/>
                        <TextBlock x:Name="txtDoctorFees" 
                                 Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Other Charges" 
                                 Grid.Row="3" Grid.Column="0"/>
                        <TextBlock x:Name="txtOtherCharges" 
                                 Grid.Row="3" Grid.Column="1"/>

                        <Border BorderBrush="#ddd" 
                                BorderThickness="0,1,0,0" 
                                Grid.Row="4" Grid.ColumnSpan="2" 
                                Margin="0,10"/>

                        <TextBlock Text="Total Amount" 
                                 FontWeight="Bold"
                                 Grid.Row="5" Grid.Column="0"/>
                        <TextBlock x:Name="txtTotalAmount" 
                                 FontWeight="Bold"
                                 Grid.Row="5" Grid.Column="1"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Print" 
                    Width="100" 
                    Margin="0,0,10,0"
                    Click="btnPrint_Click"/>
            <Button Content="Close" 
                    Width="100"
                    Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window> 